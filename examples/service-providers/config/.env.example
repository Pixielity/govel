# Service Provider Example Configuration
# Copy this file to .env and modify the values as needed

# =============================================================================
# APPLICATION CONFIGURATION
# =============================================================================
APP_NAME="Service Provider Example"
APP_VERSION="1.0.0"
APP_ENVIRONMENT="development"
APP_DEBUG=true

# =============================================================================
# DATABASE CONFIGURATION (PostgreSQL)
# =============================================================================
APP_DATABASE_HOST=localhost
APP_DATABASE_PORT=5432
APP_DATABASE_DATABASE=example_db
APP_DATABASE_USERNAME=postgres
APP_DATABASE_PASSWORD=password
APP_DATABASE_SSL_MODE=disable

# Connection Pool Settings
APP_DATABASE_MAX_OPEN_CONNECTIONS=25
APP_DATABASE_MAX_IDLE_CONNECTIONS=5
APP_DATABASE_CONNECTION_LIFETIME=5m
APP_DATABASE_CONNECT_TIMEOUT=30s
APP_DATABASE_QUERY_TIMEOUT=30s

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
APP_REDIS_HOST=localhost
APP_REDIS_PORT=6379
APP_REDIS_PASSWORD=
APP_REDIS_DATABASE=0

# Connection Pool Settings
APP_REDIS_POOL_SIZE=10
APP_REDIS_MIN_IDLE_CONNECTIONS=2
APP_REDIS_MAX_RETRIES=3
APP_REDIS_DIAL_TIMEOUT=5s
APP_REDIS_READ_TIMEOUT=3s
APP_REDIS_WRITE_TIMEOUT=3s
APP_REDIS_POOL_TIMEOUT=4s

# TLS Configuration (optional)
APP_REDIS_TLS_ENABLED=false
APP_REDIS_TLS_INSECURE_SKIP_VERIFY=false
APP_REDIS_TLS_CERT_FILE=
APP_REDIS_TLS_KEY_FILE=
APP_REDIS_TLS_CA_FILE=

# Redis Sentinel Configuration (optional)
APP_REDIS_SENTINEL_ENABLED=false
APP_REDIS_SENTINEL_MASTER_NAME=mymaster
APP_REDIS_SENTINEL_ADDRESSES=sentinel1:26379,sentinel2:26379,sentinel3:26379
APP_REDIS_SENTINEL_PASSWORD=

# Redis Cluster Configuration (optional)
APP_REDIS_CLUSTER_ENABLED=false
APP_REDIS_CLUSTER_ADDRESSES=cluster1:6379,cluster2:6379,cluster3:6379
APP_REDIS_CLUSTER_MAX_REDIRECTS=3
APP_REDIS_CLUSTER_READ_ONLY=false

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
APP_LOGGING_LEVEL=info
APP_LOGGING_FORMAT=json
APP_LOGGING_OUTPUT=stdout

# =============================================================================
# HTTP CLIENT CONFIGURATION (future)
# =============================================================================
APP_HTTP_TIMEOUT=30s
APP_HTTP_MAX_RETRIES=3
APP_HTTP_USER_AGENT="Service Provider Example/1.0.0"

# =============================================================================
# EMAIL CONFIGURATION (future)
# =============================================================================
APP_MAIL_DRIVER=smtp
APP_MAIL_HOST=localhost
APP_MAIL_PORT=587
APP_MAIL_USERNAME=
APP_MAIL_PASSWORD=
APP_MAIL_ENCRYPTION=tls
APP_MAIL_FROM_ADDRESS=noreply@example.com
APP_MAIL_FROM_NAME="Service Provider Example"

# =============================================================================
# MONITORING & HEALTH CHECK CONFIGURATION
# =============================================================================
APP_HEALTH_CHECK_INTERVAL=30s
APP_HEALTH_CHECK_TIMEOUT=10s
APP_METRICS_ENABLED=true
APP_METRICS_PORT=9090

# =============================================================================
# PRODUCTION OVERRIDES
# Uncomment and modify for production deployments
# =============================================================================

# Production Database
# APP_DATABASE_HOST=prod-db.example.com
