# GoVel Application Environment Variables
# Copy this file to .env and customize the values for your environment

# Application Settings
APP_NAME="My GoVel Application"
APP_VERSION="1.0.0"
APP_ENV="development"          # development, testing, staging, production
APP_DEBUG="true"               # true, false, 1, 0, yes, no, on, off, enabled, disabled
APP_LOCALE="en"
APP_FALLBACK_LOCALE="en"
APP_TIMEZONE="UTC"

# Runtime Settings
APP_CONSOLE="false"            # Whether running in console mode
APP_TESTING="false"            # Whether running unit tests

# Timeout Settings (in seconds)
APP_SHUTDOWN_TIMEOUT="30"      # Graceful shutdown timeout

# Example Production Settings (uncomment to use):
# APP_NAME="Production API"
# APP_VERSION="2.1.0"
# APP_ENV="production"
# APP_DEBUG="false"
# APP_LOCALE="en"
# APP_TIMEZONE="America/New_York"
# APP_SHUTDOWN_TIMEOUT="60"
